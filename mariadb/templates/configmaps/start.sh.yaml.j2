apiVersion: v1
kind: ConfigMap
data:
  start.sh: |+
    #!/bin/bash
    set -ex
    trap "trap - SIGTERM && kill -- -$$" SIGINT SIGTERM EXIT

    chown mysql: /var/lib/mysql

    REPLICAS=$(( {{ deployment.replicas }} ))

    if [ "$REPLICAS" -eq 1 ] ; then
        echo "Creating one-instance MariaDB cluster."
        bash /tmp/bootstrap-db.sh
        mysqld_safe --defaults-file=/etc/my.cnf.d/my.cnf \
                    --console \
                    --wsrep-new-cluster \
                    --wsrep_cluster_address='gcomm://'
    else
        export WSREP_OPTIONS=`python /tmp/peer-finder.py mariadb`
        exec mysqld --defaults-file=/etc/my.cnf.d/my.cnf --console $WSREP_OPTIONS
    fi
