apiVersion: extensions/v1beta1
kind: Deployment
spec:
  replicas: {{ deployment.replicas }}
  template:
    metadata:
      labels:
        app: ironic-conductor
    spec:
      nodeSelector:
        {{ deployment.control_node_label }}: enabled
      # TODO(DTadrzak): it must be removed in future
      securityContext:
        runAsUser: 0
      hostNetwork: true
      hostPID: true
      dnsPolicy: ClusterFirst
      containers:
        - name: ironic-conductor
          image: {{ deployment.image.conductor }}
          imagePullPolicy: Always
          # TODO(DTadrzak): it must be removed in future
          securityContext:
            privileged: true
          env:
            - name: INTERFACE_NAME
              value: "eth0"
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: COMMAND
              value: "ironic-conductor"
            - name: DEPENDENCY_JOBS
              value: "ironic-db-sync"
            - name: DEPENDENCY_SERVICE
              value: "rabbitmq"
            - name: DEPENDENCY_CONFIG
              value: "/etc/ironic/ironic.conf,/etc/resolv.conf"
          volumeMounts:
            - name: ironicconf
              mountPath: /configmaps/ironic.conf
            - name: tftpboot
              mountPath: /tftpboot
            - name: resolvconf
              mountPath: /configmaps/resolv.conf
        - name: ironic-pxe
          image: {{ deployment.image.ironic_pxe }}
          imagePullPolicy: Always
          # TODO(DTadrzak): it must be removed in future
          securityContext:
            privileged: true
          env:
            - name: INTERFACE_NAME
              value: "eth0"
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: COMMAND
              value: "bash /tmp/ironic-pxe.sh"
            - name: DEPENDENCY_CONFIG
              value: "/tmp/ironic-pxe.sh,/etc/resolv.conf,/tftpboot/pxelinux.cfg/default"
          volumeMounts:
            - name: ironicpxe
              mountPath: /configmaps/ironic-pxe.sh
            - name: default
              mountPath: /configmaps/default
            - name: tftpboot
              mountPath: /tftpboot
            - name: resolvconf
              mountPath: /configmaps/resolv.conf
      volumes:
        - name: ironicconf
          configMap:
            name: ironic-conf
        - name: ironicpxe
          configMap:
            name: ironic-pxesh
        - name: default
          configMap:
            name: pxelinux-default
        - name: tftpboot
          emptyDir: {}
        - name: resolvconf
          configMap:
            name: ironic-resolvconf
