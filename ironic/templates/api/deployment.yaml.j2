apiVersion: extensions/v1beta1
kind: Deployment
spec:
  replicas: {{ deployment.replicas }}
  template:
    metadata:
      labels:
        app: ironic-api
    spec:
      # TODO(DTadrzak): it must be removed in future
      securityContext:
        runAsUser: 0
      nodeSelector:
        {{ deployment.control_node_label }}: enabled
      containers:
        - name: ironic-api
          image: {{ deployment.image.api }}
          imagePullPolicy: Always
          env:
            - name: INTERFACE_NAME
              value: "eth0"
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: COMMAND
              value: "bash /tmp/start.sh"
            - name: DEPENDENCY_JOBS
              value: "ironic-init"
            - name: DEPENDENCY_SERVICE
              value: "mariadb,rabbitmq,keystone-api"
            - name: DEPENDENCY_CONFIG
              value: "/etc/ironic/ironic-api.conf,/tmp/start.sh"
          ports:
            - containerPort: {{ network.port.api }}
          readinessProbe:
            tcpSocket:
              port: {{ network.port.api }}
          volumeMounts:
            - name: ironicapiconf
              mountPath: /configmaps/ironic-api.conf
            - name: startsh
              mountPath: /configmaps/start.sh
            - name: etcironic
              mountPath: /etc/ironic
      volumes:
        - name: ironicapiconf
          configMap:
            name: ironic-apiconf
        - name: startsh
          configMap:
            name: ironic-startsh
        - name: etcironic
          emptyDir: {}
