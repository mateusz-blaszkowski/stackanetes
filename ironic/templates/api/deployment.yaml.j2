apiVersion: extensions/v1beta1
kind: Deployment
spec:
  replicas: {{ deployment.replicas }}
  template:
    metadata:
      labels:
        app: ironic-api
    spec:
      nodeSelector:
        {{ deployment.control_node_label }}: enabled
      containers:
        - name: ironic-api
          image: {{ deployment.image.api }}
          imagePullPolicy: Always
          env:
            - name: INTERFACE_NAME
              value: "eth0"
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: COMMAND
              value: "ironic-api"
            - name: DEPENDENCY_JOBS
              value: "ironic-init"
            - name: DEPENDENCY_SERVICE
              value: "mariadb,rabbitmq,keystone-api"
            - name: DEPENDENCY_CONFIG
              value: "/etc/ironic/ironic.conf"
          ports:
            - containerPort: {{ network.port.api }}
          readinessProbe:
            tcpSocket:
              port: {{ network.port.api }}
          volumeMounts:
            - name: ironicconf
              mountPath: /configmaps/ironic.conf
            - name: etcironic
              mountPath: /etc/ironic
      volumes:
        - name: ironicconf
          configMap:
            name: ironic-conf
        - name: etcironic
          emptyDir: {}
