apiVersion: v1
kind: ConfigMap
data:
  post.sh: |+
    #!/bin/bash
    set -ex

    ansible localhost -vvv -m kolla_keystone_service -a "service_name=ironic service_type=baremetal description='Openstack Baremetal' endpoint_region={{ keystone.ironic_region_name }} url='http://ironic-api:{{ network.port.api }}' interface=admin region_name={{ keystone.admin_region_name }} auth='{{ keystone.auth }}'" -e "{ 'openstack_ironic_auth': {{ keystone.auth }} }"
    ansible localhost -vvv -m kolla_keystone_service -a "service_name=ironic service_type=baremetal description='Openstack Baremetal' endpoint_region={{ keystone.ironic_region_name }} url='http://ironic-api:{{ network.port.api }}' interface=internal region_name={{ keystone.admin_region_name }} auth='{{ keystone.auth }}'" -e "{ 'openstack_ironic_auth': {{ keystone.auth }} }"
    {% if network.ingress.enabled -%}
      ansible localhost -vvv -m kolla_keystone_service -a "service_name=ironic service_type=baremetal description='Openstack Baremetal' endpoint_region={{ keystone.ironic_region_name }} url='http://{{ network.ingress.named_host}}:{{ network.ingress.port }}' interface=public region_name={{ keystone.admin_region_name }} auth='{{ keystone.auth }}'" -e "{ 'openstack_ironic_auth': {{ keystone.auth }} }"
    {%- else -%}
      ansible localhost -vvv -m kolla_keystone_service -a "service_name=ironic service_type=baremetal description='Openstack Baremetal' endpoint_region={{ keystone.ironic_region_name }} url='http://ironic-api:{{ network.port.api }}' interface=public region_name={{ keystone.admin_region_name }} auth='{{ keystone.auth }}' " -e "{ 'openstack_ironic_auth': {{ keystone.auth }} }"
    {%- endif %}

    ansible localhost -vvv -m kolla_keystone_user -a "project=service user={{ keystone.ironic_user }} password={{ keystone.ironic_password }} role=admin region_name={{ keystone.admin_region_name }} auth='{{ keystone.auth }}'" -e "{'openstack_ironic_auth':{{ keystone.auth }}}"
