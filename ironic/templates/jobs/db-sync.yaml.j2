apiVersion: batch/v1
kind: Job
spec:
  template:
    spec:
      restartPolicy: OnFailure
      # TODO(DTadrzak): it must be removed in future
      securityContext:
        runAsUser: 0
      containers:
        - name: ironic-db-sync
          image: {{ deployment.image.db_sync }}
          imagePullPolicy: Always
          env:
            - name: INTERFACE_NAME
              value: "eth0"
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: COMMAND
              value: "bash /tmp/db-sync.sh"
            - name: DEPENDENCY_JOBS
              value: "ironic-init"
            - name: DEPENDENCY_SERVICE
              value: "mariadb"
            - name: DEPENDENCY_CONFIG
              value: "/etc/ironic/ironic.conf,/tmp/db-sync.sh"
          volumeMounts:
            - name: ironicconf
              mountPath: /configmaps/ironic.conf
            - name: dbsyncsh
              mountPath: /configmaps/db-sync.sh
      volumes:
        - name: ironicconf
          configMap:
            name: ironic-conf
        - name: dbsyncsh
          configMap:
            name: ironic-dbsyncsh
